.coders
    font-size 0
    text-align center

    &__content
        {ibm}
        width 50%
        text-align left
        margin-top 300px

        @media (min-width 768px)
            width 40%
            margin-top 0

    &__img
        {ibm}
        width 50%
        background-image url(../img/coders-img.png)
        background-position center
        background-repeat no-repeat
        background-size cover
        height 300px
        margin-right -20px

        @media (min-width 480px)
            height 380px

        @media (min-width 768px)
            height 460px
            width 40%
            margin-right 0

        @media (min-width 992px)
            height 540px

        @media (min-width 1170px)
            height 620px

    &__text, &__title
        position relative
        margin-right -100px

        @media (min-width 480px)
            margin-right 0
