.arrows
    &__prev, &__next
        width 60px
        background none
        height 31px
        border none
        cursor pointer
        position absolute
        z-index 1
        bottom 4%
        background-repeat no-repeat
        background-position center
        background-size contain
        transition all .3s ease

        @media (min-width 480px)
            width 100px

        &:focus
            outline none

        &:hover
            transform scale(1.2)

    &__prev
        margin-right 15px
        right 50%
        background-image inline('arrow-left.svg')

        @media (min-width 480px)
            margin-right 25px

        &_w
            background-image inline('arrow-left-w.svg')

            @media (min-width 768px)
                background-image inline('arrow-left.svg')


    &__next
        margin-left 15px
        left 50%
        background-image inline('arrow-right.svg')

        @media (min-width 480px)
            margin-left 25px

        &_w
            background-image inline('arrow-right-w.svg')

            @media (min-width 768px)
                background-image inline('arrow-right.svg')
