.blog-full
    padding-top 100px
    padding-bottom 150px

    @media (min-width 480px)
        padding-bottom 160px

    @media (min-width 768px)
        padding-bottom 170px

    @media (min-width 992px)
        padding-bottom 180px

    @media (min-width 1170px)
        padding-bottom 200px

    &__section-title
        margin-bottom 20px
        text-align center
        display none

        @media (min-width 910px)
            display block

        h1
            font-weight 300
            text-transform uppercase
            opacity .5
            font-size 18px
            margin-top 0
            margin-bottom 0

    &__title
        text-align center
        max-width 770px
        margin-left auto
        margin-right auto
        display none

        @media (min-width 910px)
            display block

        h2
            font-size 30px
            font-weight 300
            line-height 1.9

    &__info
        font-weight 300
        opacity .5
        font-size 18px
        text-align center
        margin-bottom 55px
        display none

        @media (min-width 910px)
            display block

    &__date
        {ibm}
        padding-left 20px
        padding-right 20px

    &__views
        {ibm}
        padding-left 20px
        padding-right 20px

    &__img
        max-width 970px
        margin-left auto
        margin-right auto
        margin-bottom 70px
        display none

        @media (min-width 910px)
            display block

        img
            width 100%

    &__text
        font-size 18px
        line-height 1.9

        p
            max-width 770px
            margin-left auto
            margin-right auto
            font-weight 400

        h3
            max-width 770px
            margin-left auto
            margin-right auto
            font-size 25px
            margin-top 60px
            margin-bottom 20px

    &__slider
        margin-top 70px
        margin-bottom 70px

    &__share
        text-align center

        h2
            font-size 30px
            font-weight 300
            line-height 1.9

        a
            opacity .5
            font-size 18px
            color #404040
            text-decoration none

    &__social
        {ibm}
        margin-right 40px

        a
            font-size 0
