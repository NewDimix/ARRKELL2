.blog-item
    &__img
        height 300px
        margin-bottom 15px

        @media (min-width 480px)
            height 350px

        @media (min-width 768px)
            height 400px

        @media (min-width 910px)
            height 250px

        @media (min-width 1170px)
            height 300px

    &__category
        margin-bottom 15px

        h3
            margin-top 0
            margin-bottom 0
            text-transform uppercase
            font-size 18px
            font-family OpenSans
            font-weight 300
            opacity .5

    &__title
        line-height 1.9
        font-weight 300
        font-size 18px

        @media (min-width 480px)
            font-size 19px

        @media (min-width 768px)
            font-size 20px

        @media (min-width 910px)
            height 170px

        @media (min-width 992px)
            font-size 21px

        @media (min-width 1170px)
            font-size 22px

        h4
            font-weight 300
            margin-top 0
            margin-bottom 0

        a
            color #404040
            text-decoration none

            &:hover
                text-decoration underline
