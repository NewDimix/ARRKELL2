.projects-item
    text-align left
    color #404040
    font-size 0

    &__img
        {ibm}
        height 19em
        margin-bottom 10px
        width 50%
        margin-left -10px
        transform translateX(-100px)
        transition all .4s ease
        opacity 0

        @media (min-width 480px)
            margin-left 0
            width 40%

    &__content
        {ibm}
        width 50%
        margin-left -75px

        @media (min-width 480px)
            width 60%
            margin-left -55px

    &__title
        margin-bottom 30px

        h3
            {ibb}
            margin-right .33em
            line-height .9
            transform translateY(50px)
            transition all .4s ease
            opacity 0

        span
            {ibb}
            font-size 30px
            cursor pointer
            font-size .5em
            transform translateY(50px)
            transition all .4s ease
            opacity 0

    &__text
        position relative
        margin-bottom 10px
        max-width 600px
        transform translateY(50px)
        transition all .4s ease
        opacity 0

    &__link
        position relative
        font-size 16px

.slick-active
    .projects-item
        &__img
            transition all .4s ease .8s
            transform translateX(0)
            opacity 1

        &__title
            h3
                transition all .4s ease 1.05s
                transform translateY(0)
                opacity 1

            span
                transition all .4s ease 1.15s
                transform translateY(0)
                opacity .3

        &__text
            transition all .4s ease 1.25s
            transform translateX(0)
            opacity 1


