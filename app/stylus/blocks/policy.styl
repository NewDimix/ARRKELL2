.policy
    padding-top 100px
    padding-bottom 150px

    @media (min-width 480px)
        padding-bottom 160px

    @media (min-width 768px)
        padding-bottom 170px

    @media (min-width 992px)
        padding-bottom 180px

    @media (min-width 1170px)
        padding-bottom 200px

    &__title
        text-align center
        max-width 770px
        margin-left auto
        margin-right auto

        h1
            font-size 30px
            font-weight 300
            line-height 1.9

    &__text
        font-size 18px
        line-height 1.9

        p
            max-width 770px
            margin-left auto
            margin-right auto
            font-weight 400

        h2
            max-width 770px
            margin-left auto
            margin-right auto
            font-size 25px
            margin-top 60px
            margin-bottom 20px
