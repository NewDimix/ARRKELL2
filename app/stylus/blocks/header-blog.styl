.header-blog
    &__content
        @media (min-width 910px)
            display none

    &__section-title
        text-align center

        h1
            font-weight 300
            text-transform uppercase
            opacity .5
            font-size 18px
            margin-top 0
            margin-bottom 0

    &__title
        text-align center
        max-width 770px
        margin-left auto
        margin-right auto

        h2
            font-size 25px
            font-weight 300
            line-height 1.8
            margin-top 0
            margin-bottom 0

    &__info
        font-weight 300
        opacity .5
        font-size 18px
        text-align center

    &__date
        {ibm}
        padding-left 20px
        padding-right 20px

    &__views
        {ibm}
        padding-left 20px
        padding-right 20px
