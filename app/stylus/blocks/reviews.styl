.reviews
    text-align center
    background-color #F7F7F7

    .container
        padding-top 30px
        padding-bottom 70px

        @media (min-width 480px)
            padding-top 40px
            padding-bottom 80px

        @media (min-width 768px)
            padding-top 50px
            padding-bottom 90px

        @media (min-width 992px)
            padding-top 60px
            padding-bottom 100px

        @media (min-width 1170px)
            padding-top 70px
            padding-bottom 110px

    &__logo
        max-width 370px
        margin-bottom 45px
        margin-left auto
        margin-right auto

        img
            width 100%

    &__name
        font-size 30px
        margin-bottom 45px

    &__text
        font-family OpenSans
        font-weight 300
        line-height 1.9
        font-size 16px
        max-width 50%
        min-width 300px
        margin-left auto
        margin-right auto

        @media (min-width 480px)
            font-size 18px

        @media (min-width 768px)
            font-size 21px

        @media (min-width 992px)
            font-size 27px

        @media (min-width 1170px)
            font-size 30px

        a
            padding-right 0

            &:before
                display none

    &__link
        {ibm}
        margin-bottom 75px
        color #404040
        opacity .3
        text-decoration none
        font-size 16px
        font-weight 300
        display none

        @media (min-width 480px)
            font-size 18px

        @media (min-width 768px)
            font-size 21px

        @media (min-width 992px)
            font-size 27px

        @media (min-width 1170px)
            font-size 30px
