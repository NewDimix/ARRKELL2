.contact-form
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    background-color #fff
    overflow auto
    z-index 20
    display none
    text-align left

    &__text
        font-family AlegreyaSans
        color #404040
        opacity .3
        font-size 20px
        display block
        margin-bottom .25em

        @media (min-width 480px)
            font-size 25px

        @media (min-width 768px)
            font-size 30px

    &__input
        font-family AlegreyaSans
        font-size 30px
        width 100%
        max-width 570px
        border none
        border-bottom 2px solid #404040
        display block
        margin-bottom .33em
        font-weight 300
        color #404040
        letter-spacing .135em

        @media (min-width 480px)
            font-size 45px
            letter-spacing .145em

        @media (min-width 768px)
            font-size 60px

        &:focus
            outline none

    &__btn
        font-family AlegreyaSans
        font-size 27px
        font-weight 700
        letter-spacing .2em
        background none
        border none
        width 100%
        color #404040
        cursor pointer

        @media (min-width 480px)
            font-size 40px

        @media (min-width 768px)
            font-size 50px

        &:focus
            outline none

    &__content
        {ibt}
        position absolute
        width 100%
        max-width 290px
        padding-left 10px
        padding-right 10px
        left 50%
        top 50%
        transform translate(-50%, -50%)

        @media (min-width 480px)
            max-width 430px

        @media (min-width 768px)
            max-width 570px

    &__close
        position absolute
        width 30px
        height 30px
        right 10px
        top 10px
        background none
        border none
        cursor pointer

        &:before, &:after
            content ''
            height 1px
            width 25px
            background-color black
            position absolute
            top 50%
            left 50%

        &:before
            transform translateX(-50%) rotate(45deg)

        &:after
            transform translateX(-50%) rotate(-45deg)

    .help-block
        color #404040
