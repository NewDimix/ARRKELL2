html
    box-sizing border-box
    font-size 10px
    height 100%

*, *:before, *:after
    box-sizing inherit

body
    min-width 320px
    font-family OpenSans
    font-weight 300
    font-style normal
    line-height normal
    color #404040
    height 100%
    min-height auto
    min-height auto

    &.noscroll
        overflow hidden

    &.body_one-page
        display flex
        flex-direction column

        .main
            flex 1 0 auto

        .footer
            flex 0 0 auto

.container
    position relative
    max-width 1190px
    padding-left 10px
    padding-right 10px
    margin-left auto
    margin-right auto

p
    margin-top 0
    margin-bottom 20px

    &:last-child
        margin-bottom 0

