.teams-item
    font-size 0

    &__img
        height 337px
        position relative
        overflow hidden
        margin-left -10px
        margin-right -10px

        @media (min-width 480px)
            height 355px

        @media (min-width 768px)
            height 327px
            {ibt}
            width 49%
            margin-left 0
            margin-right 0
            overflow visible

        @media (min-width 992px)
            height 364px

        @media (min-width 1170px)
            height 398px

        img
            position absolute
            width auto
            max-width 85%
            left 80%
            height 90%
            bottom 0
            transform translateX(-30%)
            transition all .4s ease
            opacity 0

            @media (min-width 768px)
                left inherit
                right 30px
                height auto
                transform translateX(-100px)

    &__content
        position relative
        margin-top -327px
        padding-left 10px
        color white
        width 60%
        padding-top 50px

        @media (min-width 480px)
            margin-top -347px

        @media (min-width 768px)
            color inherit
            margin-left -40px
            margin-top 0
            padding-top 0
            {ibt}
            width 51%
            max-width 570px

    &__title
        margin-bottom .3em
        transform translateY(50px)
        transition all .4s ease
        opacity 0

        h3
            line-height .75em

    &__post
        opacity .3
        margin-bottom 1em
        font-size 16px
        transform translateY(50px)
        transition all .4s ease
        opacity 0

        @media (min-width 480px)
            font-size 21px

        @media (min-width 768px)
            font-size 24px

        @media (min-width 992px)
            font-size 27px

        @media (min-width 1170px)
            font-size 30px

    &__text
        transform translateY(50px)
        transition all .4s ease
        opacity 0

.slick-active
    .teams-item
        &__img
            img
                transition all .4s ease .8s
                transform translateX(-50%)
                opacity 1

                @media (min-width 768px)
                    transform translateX(0)


        &__title
            transition all .4s ease 1.05s
            transform translateY(0)
            opacity 1

        &__post
            transition all .4s ease 1.15s
            transform translateY(0)
            opacity 1

        &__text
            transition all .4s ease 1.25s
            transform translateY(0)
            opacity 1
