.section
    &:not(:last-child)
        margin-bottom 175px

        @media (min-width 480px)
            margin-bottom 205px

        @media (min-width 768px)
            margin-bottom 235px

        @media (min-width 992px)
            margin-bottom 265px

        @media (min-width 1170px)
            margin-bottom 295px

    &__title
        font-family AlegreyaSans
        font-weight 700
        line-height 1.44
        font-size 25px
        position relative

        @media (min-width 480px)
            font-size 31px

        @media (min-width 768px)
            font-size 36px

        @media (min-width 992px)
            font-size 43px

        @media (min-width 1170px)
            font-size 50px

        h1, h2, h3, h4, h5, h6
            margin-top 0
            margin-bottom 0
            font-size inherit

    &__subtitle
        font-family AlegreyaSans
        font-weight 300
        line-height 1.2
        font-size 25px
        position relative

        @media (min-width 480px)
            font-size 33px

        @media (min-width 768px)
            font-size 42px

        @media (min-width 992px)
            font-size 51px

        @media (min-width 1170px)
            font-size 60px

        h1, h2, h3, h4, h5, h6
            margin-top 0
            margin-bottom 0
            font-size inherit
            font-weight 300

    &__text
        line-height 1.87
        font-size 16px

        @media (min-width 480px)
            font-size 18px

        @media (min-width 768px)
            font-size 21px

        @media (min-width 992px)
            font-size 27px

        @media (min-width 1170px)
            font-size 30px

        a
            text-decoration none
            color #404040
            padding-right .6em
            position relative

            &:before
                content ''
                position absolute
                right 0
                top 50%
                transform rotate(45deg) translateY(-50%)
                width 6px
                height 6px
                border-top 1px solid #404040
                border-right 1px solid #404040

                @media (min-width 480px)
                    width 7px
                    height 7px

                @media (min-width 768px)
                    width 8px
                    height 8px

                @media (min-width 992px)
                    width 9px
                    height 9px

                @media (min-width 1170px)
                    width 10px
                    height 10px
