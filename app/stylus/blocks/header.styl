.header
    position relative
    padding-top 50px
    color #404040
    font-family OpenSans
    font-weight 400
    font-size 18px
    background-color #fff

    @media (min-width 480px)
        padding-top 55px

    @media (min-width 768px)
        padding-top 60px

    @media (min-width 992px)
        padding-top 70px

    @media (min-width 1170px)
        padding-top 80px

    &_main
        height 100%
        background-image url(../img/header-bg.jpg)
        background-position center
        background-repeat no-repeat
        background-size cover
        color white
        padding-bottom 145px
        overflow hidden

        @media (min-width 480px)
            padding-bottom 135px

        @media (min-width 768px)
            padding-bottom 115px

        @media (min-width 992px)
            padding-bottom 65px

        @media (min-width 1170px)
            padding-bottom 65px

        &:before
            content ''
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            background-color rgba(0, 0, 0, 0.7)

        .header__row
            opacity 0
            margin-bottom 100px
            transform translateY(70px)
            transition all .7s ease

            &_show
                opacity 1
                transform none

    &_blog
        background-position center
        background-repeat no-repeat
        background-size cover
        color white
        padding-bottom 20px
        position relative

        @media (min-width 910px)
            background none !important

        .header__bg
            display block
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            background linear-gradient(to bottom, transparent 0%, black 100%)

            @media (min-width 910px)
                display none


        .header__row
            margin-bottom 100px

            @media (min-width 910px)
                margin-bottom 0

        .logo
            &__black
                @media (min-width 910px)
                    opacity 1 !important

            &__white
                @media (min-width 910px)
                    opacity 0 !important

        .header__language
            button
                @media (min-width 910px)
                    color #404040

                &:before
                    @media (min-width 910px)
                        border-right 1px solid #404040
                        border-bottom 1px solid #404040

                &+ul
                    a
                        @media (min-width 910px)
                            color #404040

        .menu
            &__link
                @media (min-width 910px)
                    color #404040 !important

        .header__phone
            @media (min-width 910px)
                color #404040 !important

    &__logo
        {ibt}
        margin-right 38px

        img
            width auto
            height 100%

    &__language
        display none
        position relative
        margin-right 40px
        height 21px

        @media (min-width 910px)
            {ibb}

        button
            background none
            border none
            font-family OpenSans
            font-weight 400
            font-size 16px
            position relative
            padding-right 13px
            cursor pointer
            opacity .7
            transition all .15s ease

            @media (min-width 992px)
                font-size 18px

            &:before
                content ''
                position absolute
                width 6px
                height 6px
                right 0
                top 50%
                transform translateY(-50%) rotate(45deg)
                transition all .3s ease

            &:hover
                opacity 1

            &:focus
                outline none

            &+ul
                display none
                position absolute
                left 0
                top 100%
                padding-left 0
                list-style none
                width 100%
                text-align center
                transform translateY(-10px)

                li
                    padding-top 5px
                    padding-bottom 5px

        &_open
            button
                opacity 1

                &:before
                    transform translateY(-50%) rotate(-135deg)

        &_black
            button
                color #404040

                &:before
                    border-right 1px solid #404040
                    border-bottom 1px solid #404040

                &+ul
                    a
                        color #404040

        &_white
            button
                color white

                &:before
                    border-right 1px solid white
                    border-bottom 1px solid white

                &+ul
                    a
                        color white

    &__menu
        {ibb}
        float left
        line-height 1

        @media (min-width 910px)
            float none

    &__phone
        float right
        font-weight 600
        font-size 14px
        line-height 1.9
        transition all .3 ease
        position relative

        @media (min-width 480px)
            font-size 15px

        @media (min-width 768px)
            font-size 16px

        @media (min-width 910px)
            margin-top 5px

        @media (min-width 992px)
            font-size 17px

        @media (min-width 1170px)
            font-size 18px

        &_open
            color #404040

    &__content
        text-align center
        position relative

        @media (min-width 910px)
            max-width 570px
            text-align left

    &__title
        margin-bottom 16px
        opacity 0
        transform translateY(70px)
        transition all .7s ease

        &_show
            opacity 1
            transform none


        h1
            font-size 25px
            font-family AlegreyaSans
            font-weight 300
            line-height 1.3
            margin-top 0
            margin-bottom 0

            @media (min-width 448px)
                font-size 35px

            @media (min-width 768px)
                font-size 45px

            @media (min-width 992px)
                font-size 55px

            @media (min-width 1170px)
                font-size 60px

    &__subtitle
        font-size 16px
        font-family OpenSans
        font-weight 300
        line-height 1.9
        margin-bottom 34px
        opacity 0
        transform translateY(70px)
        transition all .7s ease

        @media (min-width 448px)
            font-size 18px

        @media (min-width 768px)
            font-size 22px

        @media (min-width 992px)
            font-size 26px

        @media (min-width 1170px)
            font-size 30px

        &_show
            opacity 1
            transform none

    &__btn
        font-size 16px
        font-family OpenSans
        font-weight 300
        line-height 41px
        background #2169D5
        border none
        color white
        padding 16px 20px
        line-height 1
        opacity 0
        cursor pointer
        transform translateY(70px)
        transition all .7s ease

        @media (min-width 448px)
            font-size 18px

        @media (min-width 768px)
            font-size 22px

        @media (min-width 992px)
            font-size 26px

        @media (min-width 1170px)
            font-size 30px

        &:focus
            outline none

        &_show
            opacity 1
            transform none

    &__cookie
        background-color black
        padding-top 25px
        padding-bottom 25px
        position absolute
        bottom 0
        left 0
        width 100%
        text-align center

        @media (min-width 992px)
            text-align left

    &__cookie-text
        font-size 18px
        margin-bottom 20px

        @media (min-width 992px)
            float left
            margin-bottom 0

    &__cookie-btns
        @media (min-width 992px)
            float right

        button
            text-transform uppercase
            background none
            border none
            color white
            cursor pointer

            &:first-child
                margin-right 30px

            &:focus
                outline none

        a
            text-transform uppercase
            color white
            text-decoration none
            opacity .3
            transition all .2s ease

            &:hover
                opacity 1

    &__bg
        display none
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-color rgba(0, 0, 0, 0.4)

        @media (min-width 910px)
            display block

    video
        display none
        position absolute
        top 0
        left 0
        min-width 100%
        min-height 100%
        width auto
        height auto

        @media (min-width 910px)
            display block

        @media (min-aspect-ratio 16/9)
            height 150%
            top -50%

        @media (max-aspect-ratio 16/9)
            width 150%
            left -50%

        @supports (object-fit cover)
            top 0
            left 0
            width 100%
            height 100%
            object-fit cover

